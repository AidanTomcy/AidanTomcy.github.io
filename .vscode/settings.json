{
  "files.exclude": {
    "**/playwright-report": true,
    "**/node_modules": true,
    "**/test-results": true,
    "**/.dccache": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/dist/**"
  ],
  "tailwindCSS.emmetCompletions": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": "off",
    "strings": true
  },
  "workbench.editor.enablePreview": false
}
